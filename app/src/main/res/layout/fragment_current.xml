<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="" >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/cityView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/city_marginTop"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/updateView"
        android:textSize="@dimen/update_textSize"
        android:layout_below="@+id/cityView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="@dimen/icon_width"
        android:layout_height="@dimen/icon_height"
        android:id="@+id/iconView"
        android:layout_below="@+id/updateView"
        android:layout_marginTop="@dimen/icon_marginTop"
        android:layout_marginStart="@dimen/icon_marginLeft"
        android:layout_marginLeft="@dimen/icon_marginLeft" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tempView"
        android:textSize="@dimen/temp_textSize"
        android:textColor="@color/temp_color"
        android:layout_below="@+id/updateView"
        android:layout_toRightOf="@+id/iconView"
        android:layout_toEndOf="@+id/iconView"
        android:layout_marginTop="@dimen/temp_marginTop"
        android:layout_marginLeft="@dimen/temp_marginLeft"
        android:layout_marginStart="@dimen/temp_marginLeft"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/degree"
        android:textSize="@dimen/deg_textSize"
        android:textColor="@color/temp_color"
        android:layout_alignTop="@+id/tempView"
        android:layout_toRightOf="@+id/tempView"
        android:layout_toEndOf="@+id/tempView"
        android:layout_marginTop="@dimen/deg_marginTop" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/descriptionView"
        android:textSize="@dimen/desc_textSize"
        android:layout_below="@+id/iconView"
        android:layout_alignLeft="@+id/iconView"
        android:layout_alignStart="@+id/iconView"
        android:layout_marginTop="@dimen/desc_marginTop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/detailsView"
        android:textSize="@dimen/details_textSize"
        android:layout_below="@+id/descriptionView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/details_marginTop" />

</RelativeLayout>
